{
  "name": "@bridge/contracts",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "forge build",
    "test": "forge test -vvv",
    "coverage": "forge coverage",
    "fmt": "forge fmt",
    "fmt:check": "forge fmt --check",
    "lint": "forge fmt --check && forge build",
    "deploy:sepolia": "npx hardhat lz:deploy --network sepolia --tags BridgeToken,BridgeOFTAdapter",
    "deploy:arb-sepolia": "npx hardhat lz:deploy --network arbitrum-sepolia --tags BridgeOFT",
    "deploy:base-sepolia": "npx hardhat lz:deploy --network base-sepolia --tags BridgeOFT",
    "deploy:opt-sepolia": "npx hardhat lz:deploy --network optimism-sepolia --tags BridgeOFT",
    "wire": "npx hardhat lz:oapp:wire --oapp-config layerzero.config.ts",
    "config:get": "npx hardhat lz:oapp:config:get --oapp-config layerzero.config.ts"
  },
  "dependencies": {
    "@layerzerolabs/lz-definitions": "^2.3.0",
    "@layerzerolabs/lz-evm-messagelib-v2": "^3.0.160",
    "@layerzerolabs/lz-evm-protocol-v2": "^2.3.0",
    "@layerzerolabs/lz-evm-v1-0.7": "^3.0.160",
    "@layerzerolabs/lz-v2-utilities": "^2.3.0",
    "@layerzerolabs/oapp-evm": "^0.0.3",
    "@layerzerolabs/oft-evm": "^0.0.10",
    "@layerzerolabs/toolbox-hardhat": "^0.3.0",
    "@openzeppelin/contracts": "^5.0.0",
    "solidity-bytes-utils": "^0.8.4"
  },
  "devDependencies": {
    "@layerzerolabs/test-devtools-evm-foundry": "^8.0.1",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "dotenv": "^16.4.0",
    "ethers": "^6.0.0",
    "hardhat": "^2.22.0",
    "hardhat-deploy": "^0.12.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.4.0"
  }
}
