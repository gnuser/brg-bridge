{
  "name": "@bridge/web",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "fmt": "prettier --check \"src/**/*.{ts,tsx}\"",
    "deploy": "vite build && wrangler pages deploy dist/ --project-name=bridge-app"
  },
  "dependencies": {
    "@layerzerolabs/lz-v2-utilities": "^2.3.0",
    "@tanstack/react-query": "^5.51.0",
    "@web3modal/wagmi": "^5.0.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "viem": "^2.17.0",
    "wagmi": "^2.12.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^16.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "jsdom": "^24.1.0",
    "postcss": "^8.4.0",
    "prettier": "^3.8.1",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.55.0",
    "vite": "^5.4.0",
    "vitest": "^2.0.0"
  }
}
